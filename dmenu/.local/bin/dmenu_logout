#!/bin/bash

LABELS="Annulla
Logout
Riavvia
Spegni
"

. ~/.cache/wal/colors.sh

CHOICE=$(echo -n "$LABELS" | dmenu -i -h 18 -nb $color0 -nf $color1 -sb $color2 -sf $color7 -fn "FantasqueSansMono Nerd Font:size=10")
case $CHOICE in
Logout) exec killall Xorg;;
Riavvia) exec reboot;;
Spegni) exec shutdown now;;
Annulla) ;;
*) ;;
esac

